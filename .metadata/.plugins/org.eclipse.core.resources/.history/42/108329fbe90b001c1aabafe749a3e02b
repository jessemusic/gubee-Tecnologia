package br.com.mattec.gubee.tecnologia.gubeeTecnologia.controller;

import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.com.mattec.gubee.tecnologia.gubeeTecnologia.controller.DTO.ProdutoDTO;
import br.com.mattec.gubee.tecnologia.gubeeTecnologia.model.Produto;
import br.com.mattec.gubee.tecnologia.gubeeTecnologia.model.TecnologiaUtilizada;

@RestController
public class ProdutoController {
	
	@RequestMapping("/produtos")
	public List<ProdutoDTO> lista(){
		
		Produto produto1 = new Produto("Spring Boot","FrameWork para desenvolvimento","Programadores em geral", new TecnologiaUtilizada("Java"));
		Produto produto2 = new Produto("JPA","FrameWork para desenvolvimento","Programadores em geral", new TecnologiaUtilizada("Java"));
		Produto produto3 = new Produto("Mysql","Banco de dados","Programadores em geral", new TecnologiaUtilizada("Oracle"));
		Produto produto4 = new Produto("Oracle Code","Prioritizing the health and safety of our attendees","Programadores em geral", new TecnologiaUtilizada("Oracle"));
		return ProdutoDTO.converter(Arrays.asList(produto1, produto2, produto3, produto4));
	}
}
