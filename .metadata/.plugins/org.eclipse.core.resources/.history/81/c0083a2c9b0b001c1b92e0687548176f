package br.com.mattec.gubee.tecnologia.gubeeTecnologia.controller;

import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.com.mattec.gubee.tecnologia.gubeeTecnologia.model.Produto;

@RestController
public class ProdutoController {
	
	@RequestMapping("/produtos")
	public List<Produto> lista(){
		
		Produto produto = new Produto("Spring Boot","FrameWork para desenvolvimento","Programadores em geral");
		return Arrays.asList(produto, produto, produto, produto);
	}
}
